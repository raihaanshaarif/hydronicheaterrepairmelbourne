# Hydronic Heater Repair Melbourne - .htaccess for cPanel Hosting

# Enable compression

<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Leverage Browser Caching

<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/x-javascript "access plus 1 month"
    ExpiresByType application/x-shockwave-flash "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresDefault "access plus 2 days"
</IfModule>

# Security Headers

<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Strict-Transport-Security "max-age=63072000; includeSubDomains; preload"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Force HTTPS

RewriteEngine On
RewriteCond %{HTTPS} off
RewriteRule ^(.\*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Force www (optional - uncomment if you want to force www)

# RewriteCond %{HTTP_HOST} !^www\.

# RewriteRule ^(.\*)$ https://www.%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Remove trailing slash from non-directories

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{THE_REQUEST} /+[^?\s]\*?/[\s?]
RewriteRule ^(.+)/$ /$1 [R=301,L]

# Add trailing slash to directories (for Next.js static export)

RewriteCond %{REQUEST_FILENAME} -d
RewriteCond %{THE_REQUEST} /+[^?\s]\*?[^/][\s?]
RewriteRule ^(.+)$ /$1/ [R=301,L]

# Handle static files

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Block .txt requests that don't exist to prevent 500 errors

RewriteCond %{REQUEST_URI} !\.txt$
RewriteRule ^(.+)$ /$1.html [L]

# Return 404 for non-existent .txt files instead of 500

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} \.txt$
RewriteRule ^(.*)$ - [R=404,L]

# Custom Error Pages

ErrorDocument 404 /404.html

# Prevent access to PHP files in uploads directory

<Files "\*.php">
Order Deny,Allow
Deny from all
Allow from 127.0.0.1
</Files>

# Allow contact-form.php specifically

<Files "contact-form.php">
Order Allow,Deny
Allow from all
</Files>

# Prevent access to sensitive files

<FilesMatch "^\.">
Order allow,deny
Deny from all
</FilesMatch>

# Block access to configuration files

<FilesMatch "\.(env|json|config|ini|log|sh|inc|bak|backup|swp|dist)$">
Order allow,deny
Deny from all
</FilesMatch>

# SEO-friendly redirects from old gas heater URLs to hydronic heating URLs

RedirectMatch 301 ^/gas-heater-repair/?$ /services/services**emergency/
RedirectMatch 301 ^/gas-heater-installation/?$ /services/services**residential/hydronic-heater-installation/
RedirectMatch 301 ^/gas-heater-service/?$ /services/services**residential/hydronic-heater-servicing/
RedirectMatch 301 ^/gas-heater-servicing/?$ /services/services**residential/hydronic-heater-servicing/
RedirectMatch 301 ^/emergency-gas-repair/?$ /services/services**emergency/
RedirectMatch 301 ^/commercial-gas-heater/?$ /services/services**commercial/
RedirectMatch 301 ^/residential-gas-heater/?$ /services/services**residential/
RedirectMatch 301 ^/emergency-repair/?$ /services/services**emergency/
RedirectMatch 301 ^/installation/?$ /services/services**residential/hydronic-heater-installation/
RedirectMatch 301 ^/service/?$ /services/services**residential/hydronic-heater-servicing/

# Ducted heating to hydronic heating redirects

RedirectMatch 301 ^/ducted-heating-repair/?$ /services/services**residential/hydronic-heater-repairs/
RedirectMatch 301 ^/ducted-heating-installation/?$ /services/services**residential/hydronic-heater-installation/
RedirectMatch 301 ^/ducted-heating-service/?$ /services/services**residential/hydronic-heater-servicing/
RedirectMatch 301 ^/ducted-heating-servicing/?$ /services/services**residential/hydronic-heater-servicing/

# Brand redirects (common misspellings)

RedirectMatch 301 ^/brands/rinai/?$ /brands/rinnai/
RedirectMatch 301 ^/brands/brivis/?$ /brands/brivis/
RedirectMatch 301 ^/brands/bonar/?$ /brands/bonaire/
RedirectMatch 301 ^/brands/boneaire/?$ /brands/bonaire/

# Location-based redirects for common search terms

RedirectMatch 301 ^/melbourne-ducted-heating/?$ /coverage/
RedirectMatch 301 ^/ducted-heating-melbourne/?$ /
RedirectMatch 301 ^/heating-repair-melbourne/?$ /services/services**residential/
RedirectMatch 301 ^/emergency-heating-melbourne/?$ /services/services**emergency/
RedirectMatch 301 ^/melbourne-hydronic-heating/?$ /coverage/
RedirectMatch 301 ^/hydronic-heating-melbourne/?$ /
RedirectMatch 301 ^/hydronic-repair-melbourne/?$ /services/services**residential/
RedirectMatch 301 ^/emergency-hydronic-melbourne/?$ /services/services**emergency/

# Performance optimizations

<IfModule mod_mime.c>
    AddType text/css .css
    AddType application/javascript .js
    AddType image/webp .webp
</IfModule>

# Remove Server Signature

ServerSignature Off

# Prevent clickjacking

Header always append X-Frame-Options SAMEORIGIN

# Content Security Policy (updated for hydronic heating business and Google Maps)

Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https:; style-src 'self' 'unsafe-inline' https:; img-src 'self' data: https:; font-src 'self' data: https:; connect-src 'self' https:; frame-src 'self' https://www.google.com https://\*.google.com;"

# Schema.org structured data optimization for HVAC services

<IfModule mod_headers.c>
    Header set X-Robots-Tag "index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1"
</IfModule>

# Additional MIME types for better SEO

<IfModule mod_mime.c>
    AddType application/vnd.ms-fontobject .eot
    AddType font/truetype .ttf
    AddType font/opentype .otf
    AddType font/woff .woff
    AddType font/woff2 .woff2
    AddType image/svg+xml .svg
</IfModule>

# Compress additional file types for better performance

<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE font/truetype
    AddOutputFilterByType DEFLATE font/opentype
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>
